<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/person_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/person_image"
            android:text="Afraz Afaq"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/person_seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:text="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/person_seats"
            android:text="Seats" />

        <TextView
            android:id="@+id/person_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/person_name"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/person_image"
            android:text="Nipa Chorangi, Bus stop"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/track_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_shapes"
            android:drawableLeft="@drawable/ic_action_trackn"
            android:paddingLeft="10dp"
            android:text="Track"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/caht_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_shapes"
            android:drawableLeft="@drawable/ic_action_chatn"
            android:paddingLeft="16dp"
            android:text="Chat"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/call_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_shapes"
            android:drawableLeft="@drawable/ic_action_calln"
            android:paddingLeft="16dp"
            android:text="Call"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>